[user]
    email = adam-labbe@idexx.com
    name = Adam Labbe
[sendemail]
    from = Adam Labbe <adam-labbe@idexx.com>
    smtpserver = localhost
    smtpserverport = 1025
    smtpuser = adam-labbe@idexx.com

[push]
    default = simple
[diff]
    tool = kdiff3
[difftool "kdiff3"]
    trustExitCode = false
    cmd = "kdiff3" $BASE $LOCAL --qall
[core]
	excludesfile = ~/.gitignore_global
	pager = less -+X

[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[alias]
    lg = log --graph --abbrev-commit --decorate   --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(auto)%d%C(reset)%n''          %C(bold white)%s%C(reset)%n''          %C(white)- %an <%ae> %C(reset)' --all
    delcheck = log --graph --left-right --cherry-pick --oneline master...
    closeout = !delbranch=$(git rev-parse --abbrev-ref HEAD) && git fetch -Ppat && git checkout master && git rebase && git branch -d ${delbranch}
[rerere]
	enabled = 1
[rebase]
	instructionFormat = %an %s
[pull]
	rebase = true
[color]
	ui = true
[pager]
	tag = false
[tag]
	sort = version:refname
